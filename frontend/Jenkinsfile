pipeline {
    agent any

    stages {
        stage('Start Docker') {
            steps {
                script {
                    // Start Docker container
                    def dockerContainer = docker.image('your-docker-image').run("-p 8080:8080")
                    
                    // Run commands inside the Docker container
                    dockerContainer.inside {
                        sh 'echo "Hello from Docker container!"'
                    }
                }
            }
        }
        
        // Other stages for build, test, deploy, etc.
    }
    
    post {
        always {
            // Clean up Docker container after pipeline completes
            cleanWs()
        }
    }
}
